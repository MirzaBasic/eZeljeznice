@model eZeljeznice.Web.Areas.ModulAdministracija.Models.UlogaPrikaziVM
@using eZeljeznice.Web.Areas.ModulAdministracija.Models



<div class="panel">


    <div id="content-wrapper">



        <div class="table-light">
            <div class="table-header">
                <div class="table-caption">
                  Uloge korisnika
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>Naziv</th>
                        <th>Opis</th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (UlogaPrikaziVM.UlogaInfo x in Model.Uloge)
                    {

                        <tr>
                            <td>@x.Naziv</td>
                            <td>@x.Opis</td>
                            <td>
                                <a class="btn btn-danger btn-sm" style="color:black" href="/ModulAdministracija/Uloga/Obrisi?ulogaId=@x.Id">Obriši</a>
                                @Ajax.ActionLink("Uredi", "Uredi", new { ulogaId = x.Id }, new AjaxOptions { UpdateTargetId = "ajax-uloga" }, new { @class = "btn btn-primary btn-sm" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @Ajax.ActionLink("Dodaj novu", "Dodaj",null, new AjaxOptions { UpdateTargetId = "ajax-uloga" }, new { @class = "btn btn-primary btn-sm" })


        </div>

        <div class="panel panel-success col-md-5">

            <div id="ajax-uloga">



            </div>

        </div>



    </div>


</div>


