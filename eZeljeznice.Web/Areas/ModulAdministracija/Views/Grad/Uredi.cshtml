@model eZeljeznice.Web.Areas.ModulAdministracija.Models.GradUrediVM

@{
    Layout = null;
}



<div class="panel col-md-6">

    <div>

        @Ajax.ActionLink("Nazad", "Index",new {kantonId=Model.KantonId }, new AjaxOptions { UpdateTargetId = "ajax-kanton" })
    </div>

    @if (Model.Id <= 0)
    {
        <h4>Dodaj grad</h4>
    }
    else
    {
        <h4> Uredi grad</h4>
    }


    @using (Ajax.BeginForm("Snimi", "Grad",null, new AjaxOptions { UpdateTargetId = "ajax-kanton",OnBegin= "return validateNaziv()" }, new { @name = "form" }))
    {


        <div class="form-horizontal">



            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.KantonId)


            <div class="form-group">

                <div class="col-md-8">

                    <label for="Naziv">Naziv:</label>
                    <span id="validation" class="text-danger" style="display:none">Obavezno polje</span>
                    @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control", name = "Naziv", @id = "Naziv" })

                </div>
            </div>


            <div class="form-group">

                <div class="col-md-3">

                    <label for="PostaniskiBroj">Poštanski broj:</label>
                    @Html.TextBoxFor(model => model.PostanskiBroj, new { @class = "form-control" })

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">

                    <input type="submit" value="Sačuvaj" class="btn btn-success btn-sm" />

                </div>
            </div>

        </div>


    }



</div>