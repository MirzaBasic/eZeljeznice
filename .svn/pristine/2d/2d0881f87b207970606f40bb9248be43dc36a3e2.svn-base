@model eZeljeznice.Web.Areas.ModulAdministracija.Models.TipKarteUrediVM
  
@{
    Layout = null;
}


   


    <div>

        @Html.ActionLink("Nazad", "Index")
    </div>

    @if (Model.Id <= 0)
    {
        <h4>Dodaj tip karte</h4>
    }
    else
    {
        <h4> Uredi tip karte</h4>
    }


    @using (Html.BeginForm("Snimi", "TipKarte", FormMethod.Post, new { @name = "form", @onsubmit = "return validateNaziv()" }))
    {


        <div class="form-horizontal">



            @Html.HiddenFor(model => model.Id)


            <div class="form-group">

                <div class="col-md-8">
                     
                    <label for="Naziv">Naziv:</label>
                   <span id="validation" class="text-danger" style="display:none">Obavezno polje</span>
                    @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control", name="Naziv", @id="Naziv" })

                </div>
            </div>
            <div class="form-group">

                <div class="col-md-3">

                    <label for="Popust">Popust:</label>
                    @Html.TextBoxFor(model => model.Popust, new { @class = "form-control", @type = "number", @max="100", @min="0" })

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">

                    <input type="submit" value="Sačuvaj" class="btn btn-success btn-sm" />

                </div>
            </div>

        </div>


    }



