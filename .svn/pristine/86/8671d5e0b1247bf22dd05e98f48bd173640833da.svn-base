@model eZeljeznice.Web.Areas.ModulAdministracija.Models.UlogaKorisnikaUrediVM
@{ 

    Layout = null;
}


<div>
    @Html.ActionLink("Nazad", "Index", new { korisnikId = Model.KorisnikId })
</div>

@if (Model.UlogaId <= 0)
{
    <h4>Dodaj ulogu korisniku</h4>
}
else
{
    <h4> Uredi ulogu korisnika</h4>
}

@using (Html.BeginForm("Snimi", "UlogaKorisnika"))
{
  

    <div class="form-horizontal">
      
  
      
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.KorisnikId)

        <div class="form-group">
        
              <div class="col-md-10">
               
                    <label for="UlogaId">Uloga:</label>
                    @Html.DropDownListFor(model => model.UlogaId, Model.ulogeStavke, new { @class = "form-control" })
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
           
                    <input type="submit" value="Sačuvaj" class="btn btn-success btn-sm" />
              
                </div>
        </div>
    </div>

}



